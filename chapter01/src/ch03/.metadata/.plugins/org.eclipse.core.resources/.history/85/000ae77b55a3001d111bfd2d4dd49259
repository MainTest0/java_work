package ch01;

public class ForMainTest2 {

	public static void main(String[] args) {

		int cnt = 5;

		for (int i = 1; i <= 5; i++) {
			for (int j = 1; j <= i; j++) {
				for (int k = 1; k <= 5; k++) {
					if (k <= cnt) {
						System.out.printf("0");
						cnt--;
					}
				}
				System.out.printf("*");
			}	// end if for j
			System.out.println();
		}	// end of for i

		
	}
}

//     *     5번
//   ***   3번
// ***** 1번