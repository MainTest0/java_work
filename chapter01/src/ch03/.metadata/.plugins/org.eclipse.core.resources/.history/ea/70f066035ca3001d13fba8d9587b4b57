package ch01;

public class WhileMainTest2 {

	// 메인 작업자
	public static void main(String[] args) {

		while(true) {
			System.out.print("-");
			
			// 작업자 힘드니까 1초 잠들어
			try {
				Thread.sleep(100);
			} catch (Exception e) {
				// TODO: handle exception
			}
		} //end of while

	} // end of main

} // end of class
